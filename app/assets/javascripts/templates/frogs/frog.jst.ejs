<div id="frog_form" class="flip">

  <div class="not-edit front">
    <button id="edit_frog_form" class="btn btn-default">Edit</button>
    <button id="delete_frog_form" class="btn btn-default">Delete</button>

    <div class="frog-properties">
      <div><strong>Name:&nbsp;</strong><%= name %></div>
      <div><strong>Age:&nbsp;</strong><%= age %></div>
    </div>
  </div>

  <div class="edit back">
    <button id="save_edit_frog_form" class="btn btn-default">Save</button>
    <button id="cancel_edit_frog_form" class="btn btn-default">Cancel</button>

    <form role="form" class="frog-properties">
      <div class="form-group" id="name_line">
        <label for="name" class="control-label">Name</label>
        <input type="text" id="name" class="form-control" placeholder="Name" value="<%= name %>" />
      </div>

      <div class="form-group" id="age_line">
        <label for="age">Age</label> 
        <input type="text" id="age" class="form-control" placeholder="Age" value="<%= name %>" />
      </div>
    </form>
  </div>

</div>
